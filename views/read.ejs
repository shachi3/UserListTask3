<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
</head>

<body>
    <h1 class="ms-5">USER LIST</h1>
    <a href="/">
        <div id="home" class="position-absolute top-2 end-0 translate-middle "><i class="ri-home-2-fill "></i></div>
    </a>
    <a href="/export/pdf"><i class="ri-file-download-fill"></i>Download all</a>
    <hr />

    <div class="container d-flex mt-5 flex-wrap" style="gap: 30px">
        <% data.forEach(function(elem){ %>
            <div class="card" style="width: 18rem ">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= elem.name %>
                    </h5>
                    <h6>
                        <%= elem.email %>
                    </h6>
                    <a href="/edit/<%=elem._id %>"><i class="ri-pencil-line btn btn-warning"></i
          ></a>
                    <a href="/dlt/<%=elem._id %>"><i class="ri-delete-bin-line btn btn-danger"></i
          ></a>
                    <a href="/export/pdf/<%=elem._id %>"><i class="ri-file-download-fill"></i></a>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>